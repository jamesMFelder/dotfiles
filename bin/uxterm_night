#!/bin/bash
#Is it daytime
if [[ $(( $(date +%H | sed 's/0//') >6 )) == 1 && $(( $(date +%H | sed 's/09/9/') <18 )) == 1 ]]; then
#Regular uxterm
	args="-bg white -fg black"
else
#Dark background
	args="-bg black -fg white"
fi
#Run it with any arguments we were passed and vi340 so lsix works
uxterm -ti vt340 $args "$@"
